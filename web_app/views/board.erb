</div>
<div id="activity">
    <h2>Activity</h2>
    <ul class="activity_list">
      <% @events.each do |event| %>
      <li class="activity_card">
        <span class="activity_actor"><%= event.actor %></span>
        <span class="activity_action"><%= event.event_type %></span>
