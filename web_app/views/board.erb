
<div id ="board">
  <ul class="stage_list">
    <li class="stage to_do">
    <h2 class="stage_head">To Do <%= @to_do_issues.count %></h2>
    <ul class="card_list">
      <% @to_do_issues.each do |to_do_issue| %>
        <li class="stage_card">
          <h3>#<%= to_do_issue.number %> <%= to_do_issue.title%></h3>
          <p class="priority">
            <span class="priority_label ">PRIORITY</span>
            <span class="priority_value <%= to_do_issue.priority %>"><%= to_do_issue.priority %></span>
          </p>
          <p class="assigned">
            <span class="assiged_label">ASSIGNED</span>
            <span class="assigned_value"><%= to_do_issue.assignee.name %></span>
          </p>
          <p class="category">
            <span class="category_label">CATEGORY</span>
            <span class="category_value"><%= to_do_issue.category %></span>
          </p>
          <p class="days_open">
            <span class="days_open_label">DAYS OPEN</span>
            <span class="days_open_value"><%= to_do_issue.days_open %></span>
          </p>
        </li>
      <% end %>
    </ul>
  </li>
  <li class="stage stage in_progress">
  <h2 class="stage_head">In Progress <%= @in_progress_issues.count %></h2>
